<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".scoreboard">

    <Button
            android:text="← powrót"
            android:layout_width="280dp"
            android:layout_height="51dp"
            android:id="@+id/back" app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="64dp"
            android:layout_marginTop="16dp" app:layout_constraintTop_toTopOf="parent" android:textSize="18sp"
            android:onClick="closeScoreboard"/>
    <TextView
            android:text="Najlepsze wyniki"
            android:layout_width="337dp"
            android:layout_height="486dp"
            android:id="@+id/textView" android:textAlignment="center"
            android:layout_marginTop="12dp" app:layout_constraintTop_toBottomOf="@+id/back"
            android:layout_marginStart="36dp" app:layout_constraintStart_toStartOf="parent"/>
</android.support.constraint.ConstraintLayout>